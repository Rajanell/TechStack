@model Rajanell.TechStach.Core.Model.RequestDTO.UserRequest
@{
    ViewBag.Title = "Register Account";
}

<section id="contact-us" class="contact-us section">
    <div class="container">
        <div class="contact-head">
            <div class="row">
                <div class="col-lg-8 col-12">
                    <div class="form-main">
                        <div class="title">
                            <h4>Create a new account</h4>
                        </div>
                        @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @class = "panel-body wrapper-lg", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <hr />

                            <div class="form-group">
                                <label class="control-label">Username(Email Address)</label>
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })*@
                            </div>
                            <div class="form-group">
                                <label class="control-label">Password</label>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })*@
                            </div>
                            <div class="form-group button">
                                <button type="submit" class="btn ">Create Account</button>
                            </div>


                        }

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

