@model Rajanell.TechStack.Phonebook.Core.Model.ResponseDTO.PhoneBookResponse
    <!-- Breadcrumbs -->
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="bread-inner">
                    <ul class="bread-list">
                        <li><a href="~/Home/Index">Home<i class="ti-arrow-right"></i></a></li>
                        <li class="active"><a href="blog-single.html">Details</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="main-sidebar">

    <div class="row">
        <div class="col-6">
            <section id="contact-us" class="contact-us section">
                <div class="container">
                    <div class="contact-head">                       
                            <div class="single-head">                               
                                    <div class="row">
                                        <div class="single-info  col-10">
                                            <div class="row">
                                                <div class="col-2">
                                                    <i class="fa fa-phone"></i>
                                                </div>
                                                <div class="col-10">
                                                    <h4 class="title">@Model.Name</h4>
                                                    @Model.Entries.Count Entries
                                                </div>

                                            </div>
                                        </div>
                                    </div> 
                                    <ul class="list-group">
                                       
                                        <li class="list-group-item">
                                            <div class="row">
                                                <div class="col-1">
                                                   
                                                </div>
                                                <div class="col-6">
                                                    <b>Name</b>
                                                </div>
                                                <div class="col-5">
                                                    <b>PhoneNumber</b>
                                                </div>
                                            </div>

                                        </li>
                                        @foreach (var entry in Model.Entries)
                                        {
                                            <li class="list-group-item">
                                                <div class="row">
                                                    <div class="col-1">
                                                        <i class="fa fa-phone"></i>
                                                    </div>
                                                    <div class="col-6">
                                                        @entry.Name
                                                    </div>
                                                    <div class="col-5">
                                                        @entry.PhoneNumber
                                                    </div>
                                                </div>

                                            </li>
                                        }

                                    </ul>
                            </div>                        
                    </div>
                </div>
            </section>
        </div>
        <div class="col-6">
            <div class="single-widget newsletter">
                <h3 class="title">Phone Book Entry</h3>
                <div class="letter-inner">
                    <div class="form-inner">

                        @using (Html.BeginForm("AddPhonebookEntry", "Phonebook", FormMethod.Post, new { @class = "panel-body wrapper-lg", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })

                            <div class="form-group">
                                <input id="Text1" type="text" value="@Model.PhoneBookId" name="phonebookId" class="form-control" hidden />
                            </div>
                            <div class="form-group">
                                <input id="Text2" type="text"  name="Name" class="form-control" placeholder="Name" required  />
                            </div><br />
                            <div class="form-group">
                                <input id="Text3" type="text"  name="phonenumber" class="form-control" placeholder="Phone number" required/>
                            </div>
                            <br />
                            <div class="form-group button">
                                <button type="submit" class="btn ">Create Phonebook</button>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>



</div>