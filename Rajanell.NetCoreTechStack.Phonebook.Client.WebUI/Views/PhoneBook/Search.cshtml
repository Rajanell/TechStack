@model List<Rajanell.TechStack.Phonebook.Core.Model.ResponseDTO.PhoneBookEntryResponse>
    <div class="breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="bread-inner">
                        <ul class="bread-list">
                            <li><a href="~/Home/Index">Home<i class="ti-arrow-right"></i></a></li>
                            <li class="active"><a href="blog-single.html">Search</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="main-sidebar">
        <div class="single-widget search">
            <div class="form">
                @*<input type="email" placeholder="Search Here...">
                <a class="button" href="#"><i class="fa fa-search"></i></a>*@

                @using (Html.BeginForm("Search", "Phonebook", FormMethod.Post, new { @class = "panel-body wrapper-lg", role = "form" }))
                {
                    <input id="Text1" type="text" name="searchString" class="form-control" placeholder="Search Here..." />
                    <button type="submit" class="button"><i class="fa fa-search"></i></button>
                }
            </div>


        </div>
        <div class="row">
            <div class="col-8">
                <section id="contact-us" class="contact-us section">
                    <div class="container">
                        <div class="contact-head">
                            <div class="single-head">
                                <ul class="list-group">

                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col-1">

                                            </div>
                                            <div class="col-4">
                                                <b>Name</b>
                                            </div>
                                            <div class="col-3">
                                                <b>PhoneNumber</b>
                                            </div>
                                            <div class="col-4">
                                                <b>Phonebook</b>
                                            </div>
                                        </div>

                                    </li>
                                    @foreach (var entry in Model)
                                    {
                                        <li class="list-group-item">
                                            <div class="row">
                                                <div class="col-1">
                                                    <i class="fa fa-phone"></i>
                                                </div>
                                                <div class="col-4">
                                                    @entry.Name
                                                </div>
                                                <div class="col-3">
                                                    @entry.PhoneNumber
                                                </div>
                                                <div class="col-3">
                                                    @entry.PhoneBook.Name
                                                </div>
                                            </div>

                                        </li>
                                    }

                                </ul>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>